<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="28sp"
                android:textColor="@color/green_001"
                android:fontFamily="@font/montserrat_bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="34dp"/>

            <ImageView
                android:id="@+id/img_profil"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@id/title_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_profile_rounded"
                android:src="@drawable/profile_img" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_bold"
                android:layout_below="@id/img_profil"
                android:layout_centerHorizontal="true"
                android:text="Han Ji Pyeong"
                android:textColor="@color/green_001"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tempat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_below="@id/name"
                android:layout_centerHorizontal="true"
                android:text="Makassar"
                android:textColor="@color/green_001"
                android:textSize="14sp"/>

            <RelativeLayout
                android:id="@+id/section_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tempat"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="34dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Username"
                    android:textColor="@color/green_001"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="23dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="hanjipyeong"
                    android:textColor="@color/green_001"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/username"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp"
                    android:background="@color/green_001" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/section_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/section_username">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="34dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Email"
                    android:textColor="@color/green_001"
                    android:textSize="14sp"
                    android:layout_marginStart="23dp"/>

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="34dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="hanjipyeong@gmail.com"
                    android:layout_marginEnd="23dp"
                    android:textColor="@color/green_001"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/email"
                    android:layout_marginTop="7dp"
                    android:background="@color/green_001"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/section_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/section_email">

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="34dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Phone"
                    android:textColor="@color/green_001"
                    android:textSize="14sp"
                    android:layout_marginStart="23dp"/>

                <TextView
                    android:id="@+id/tv_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="34dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="+60 13-596 1659"
                    android:layout_marginEnd="23dp"
                    android:textColor="@color/green_001"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/phone"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="11dp"
                    android:background="@color/green_001" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/section_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/section_phone">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="34dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Date of Birthday"
                    android:textColor="@color/green_001"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="34dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="17 August 1995"
                    android:layout_marginEnd="23dp"
                    android:textColor="@color/green_001"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/date"
                    android:layout_marginTop="7dp"
                    android:background="@color/green_001"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/section_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/section_date">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="34dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Address"
                    android:textColor="@color/green_001"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="23dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Jl. sesat, Makassar"
                    android:textColor="@color/green_001"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/address"
                    android:layout_marginTop="7dp"
                    android:background="@color/green_001"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/tv_challange_status"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/section_address"
                android:paddingEnd="28dp"
                android:paddingStart="27dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_status_challange">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Challenge status"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/section_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_challange_status"
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp">

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_status_challange_2"
                    android:layout_marginEnd="43dp">

                    <LinearLayout
                        android:id="@+id/active"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_status_challange"
                        android:backgroundTint="@color/white"
                        android:gravity="center_horizontal"
                        android:layout_alignParentTop="true">
                        <TextView
                            android:id="@+id/tv_active"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Active"
                            android:textColor="@color/black"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/num_active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_status_challange_2">

                    <LinearLayout
                        android:id="@+id/finis"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_status_challange"
                        android:backgroundTint="@color/white"
                        android:gravity="center_horizontal"
                        android:layout_alignParentTop="true">
                        <TextView
                            android:id="@+id/tv_finish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Finish"
                            android:textColor="@color/black"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/num_finish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                </RelativeLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sign_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/section_status"
                android:layout_marginTop="27dp"
                android:background="@drawable/bg_button_1"
                android:fontFamily="@font/montserrat_medium"
                android:text="Sign out"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@id/btn_sign_out"/>

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background_bottom_navigation_1"
        android:paddingStart="40dp"
        android:paddingTop="12dp"
        android:paddingEnd="40dp"
        android:paddingBottom="12dp"
        app:itemIconSize="20dp"
        app:menu="@menu/bottom_navigation_menu"
        app:elevation="0dp"/>

</RelativeLayout>