<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailNewsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_back"
            android:layout_alignParentStart="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/title_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnBack"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat_bold"
            android:text="Title"
            android:textColor="@color/green_001"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/img_news"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:layout_below="@id/title_news"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:src="@drawable/img_detail" />

        <LinearLayout
            android:id="@+id/ly_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_news"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:background="@drawable/bg_desc_news"
            android:layout_marginTop="37dp"
            android:paddingStart="17dp"
            android:paddingEnd="17dp"
            android:paddingTop="32dp"
            android:paddingBottom="32dp">

            <TextView
                android:id="@+id/tv_desc_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum"
                android:textSize="14sp"
                android:textColor="@color/green_001"
                android:fontFamily="@font/montserrat_regular"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>